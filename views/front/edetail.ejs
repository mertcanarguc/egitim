                          							<% }) %>
													<!--<li><a href="https://drive.google.com/file/d/11rryipxnmrTvsIunvSrJT-9Ah_0cRMdF/preview" class="video">Health Science</a><span>00:59</span></li>-->
												</ul>
												<% } else { -%>
													<a href="/users/login">LÜTFEN GİRİŞ YAPINIZ</a>
												<% } -%>
											</div>
										</div>
									</div>
								</div>
								<!-- /card -->
							</div>
							<% if (user) { -%>
							<br>
							
						</section>

						<h2>Duyurular</h2>
							<table class="table">
								<thead>
									<tr>
										<th>Duyuru Metni</th>
										<th>Link</th>
									</tr>
								</thead>
								<tbody>
									<% duyuru.forEach( function(duyuru) { %>
									<tr>
										<td><%= duyuru.duyuru %></td>
										<td><a href="//<%= duyuru.link %>"><%= duyuru.link %></a></td>
									</tr>
									<% }) %>
								</tbody>
							</table>


							<% } else { -%>

							<% } -%>
							<!-- /accordion -->
						<!-- /section -->

					</div>
					<!-- /col -->

					<aside class="col-lg-4" id="sidebar">
						<div class="box_detail">
							<figure>
								<img src="../../upload/egitim/<%= egitim.foto %>" alt="" class="img-fluid"><span><%= egitim.ad %></span></a>
							</figure>
							<div class="price">
								<%= egitim.tutar %> ₺<!--<span class="original_price"><em>$49</em>60% discount price</span>-->
							</div>
							<a href="/satis/<%= egitim._id %>" class="btn_1 full-width">Satın Al</a>
							<a href="/onbasvuruyap/<%= egitim._id %>"><p class="text-center">Ön Başvuru Yap</p></a>

