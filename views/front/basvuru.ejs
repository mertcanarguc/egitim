<div class="card bg-light">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Üye Olmayanlar İçin Ön Başvuru Formu</h4>

	<form action="/ucretsiz" method="post"> 
	<div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
		 </div>
        <input name="adsoyad" class="form-control" placeholder="Ad Soyad" type="text">
    </div> <!-- form-group// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
		 </div>
        <input name="mail" class="form-control" placeholder="Mail Adresi" type="email">
    </div> <!-- form-group// -->
    <div class="form-group input-group">
        <select class="form-control" name="egitim">
            <% egitim.forEach( function(data) { %>
                <option><%= data.ad %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
		</div>
		<select class="custom-select" style="max-width: 120px;">
		    <option selected="">+90</option>

		</select>
    	<input name="tel" class="form-control" placeholder="Telefon" type="text">
    </div> <!-- form-group// -->

                                    
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> Ön Başvuru Yap  </button>
    </div> <!-- form-group// -->      
</form>
</article>
